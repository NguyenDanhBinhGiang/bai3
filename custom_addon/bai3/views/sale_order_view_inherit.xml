<odoo>
  <data>
    <!--      button to business plan form-->
    <record id="to_business_plan_form" model="ir.ui.view">
        <field name="name">TO plan</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="replace">
                <field name="business_plan" invisible="True"/>
                <button name="open_plan_form" type="object"
                    string="Create plan" class="oe_highlight"
                />
            </xpath>
            <xpath expr="//field[@name='validity_date']" position="replace">
                <field name="business_plan" readonly="True"/>
            </xpath>


<!--            Delete the "Confirm" button-->
            <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                <attribute name="states" />
                <!-- delete states attribute, it's influencing invisible behaviour -->
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="states" />
                <!-- delete states attribute, it's influencing invisible behaviour -->
                <attribute name="invisible">1</attribute>
            </xpath>

<!--            Delete the "Send by email" button-->
            <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
                <attribute name="states" />
                <!-- delete states attribute, it's influencing invisible behaviour -->
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][2]" position="attributes">
                <attribute name="states" />
                <!-- delete states attribute, it's influencing invisible behaviour -->
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][3]" position="attributes">
                <attribute name="states" />
                <!-- delete states attribute, it's influencing invisible behaviour -->
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
  </data>
</odoo>